{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "types": [
      "@types/chai",
      "@types/jest"
    ],
    "baseUrl": "src/",
    "paths": {
      "~/*": [
        "./*"
      ]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}
